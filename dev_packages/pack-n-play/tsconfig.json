{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    ".eslintrc.json"
  ],
  "exclude": [
    "test/fixtures",
    "test/fixtures/**/*.*",
    "template/**/*.*"
  ]
}