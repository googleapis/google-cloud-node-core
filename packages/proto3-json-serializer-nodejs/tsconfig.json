{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "lib": ["dom", "ES2023"],
    "rootDir": "typescript",
    "outDir": "build"
  },  
  "include": [
    "typescript/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
